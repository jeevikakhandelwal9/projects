import java.util.Scanner;
class Demo
{
	public static void main(String args[])
	{
		Scanner scan=new Scanner(System.in);
		int n=scan.nextInt();
		int[][] a=new int[5][5];
		int num=1;
		
		for(int i=1;i<n;i++) {
			for(int j=1;j<n;j++) {
				a[i][j]=num;
				++num;
			}
		}
		for(int i=1;i<n;i++) {
			for(int j=1;j<n;j++) {
				
				System.out.print(a[i][j]+" ");
			}
			System.out.println(" ");
		}
	}
}
